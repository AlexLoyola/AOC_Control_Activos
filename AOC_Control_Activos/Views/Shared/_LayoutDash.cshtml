<!DOCTYPE html>
<html>
<head>
    <title>Control de Activos AOC</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/styles.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="js/functions.js"></script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style type="text/css">
        html {
            letter-spacing: -.04em;
            overflow-x: hidden;
        }
    </style>
</head>
<body>
    <div id="main" class="container-fluid" style="color:white;">
        <div id="root">

            <!--Background Color-->
            <div class="stillBg " style="background-image: linear-gradient(rgb(17, 83, 88), rgb(1, 7, 8) 85%);">

            </div>
            <!--Background Color-->
            <!--Main Side Bar-->
            <div class="sideMenuContainer">
                <div class="sideMenu">
                    <div class="sideMenuExpand">
                        <img class="aocLogo" src="images/aoc.png">
                        <h1 class="aocHide">Control de Activos</h1>
                        <hr class="aocHide" />
                        <ul class="changeDisplay">
                            <li class="changeDisplay">
                                Rutas
                            </li>
                            <li class="changeDisplay">
                                Tanques
                            </li>
                            <li class="changeDisplay">
                                Opciones
                            </li>
                            <li class="changeDisplay">
                                <a href="/Home/Logout">Cerrar Sesión</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!--Main Side Bar-->

            <div class="row rootContainer">
                <div class="contenidoContainer">

                    <!--Navigation Bar-->
                    <nav class="navbar navbar-default">
                        <div class="container-fluid">
                            <div class="navbar-header">
                                <a class="navbar-brand" href="#">Rutas</a>
                            </div>
                            <ul class="nav navbar-nav">
                                <li class="active"><a href="#">Pendientes</a></li>
                                <li><a href="#">En transcurso</a></li>
                                <li><a href="#">Completadas</a></li>
                            </ul>
                        </div>
                    </nav>
                    <!--Navigation Bar-->

                    @RenderBody()
                    
                </div>
            </div>
        </div>
    </div>
</body>
</html>
